function _update()
   if (btn(0) and x >= 1) then x=x-3 end
   if (btn(1)) then x=x+2 end
   if (btn(2) and (y-1) <= 104) then y=y-1 end
   if (btn(3) and (y+1) <= 104) then y=y+1 end
   
